<%= form_for @item = list.items.new,
             url: to_do_items_path(id: list.id),
             method: :post,
             remote: true,
             html: { id: "form-#{list.id}", class: 'hidden' } do |f| %>

    <div class="form-group">
      <%= f.text_field :text, placeholder: 'Add a new to-do...' %>
    </div>

    <%= submit_tag 'Submit', class: 'btn btn-success btn-sm' %>
    <%= button_tag 'Close', class: 'btn btn-default btn-sm', type: :button, data: {'behavior' => 'collapse_on_click'} %>
<% end %>