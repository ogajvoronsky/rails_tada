todoItem = new TodoItem(<%=@item.list_id%>)
todoItem.removeCallout()

<% if @item.persisted? %>
    todoItem.add("<%=j render partial: 'to_do_items/item', locals: {item: @item} %>")

    todoItem.highlightNewOne(<%=@item.id %>)

    todoItem.focusOn()
<% else %>
    todoItem.add("<%=j render partial: 'to_do_items/form_errors', locals: {item: @item} %>")
<% end %>