$('#list-<%=params[:id] %> div.bs-callout').remove();

<% if @item.persisted? %>
    $('.current-item').removeClass('current-item');

    $('#list-<%=params[:id] %> ul').
            append("<%=j render partial: 'to_do_items/item', locals: {item: @item} %>");

    $('.current-item').css({'background-color':'#ffffe0'}).
            animate({'background-color':'#fff'}, 2000);

    $("#form-<%=params[:id] %> input[type='text']").val('').focus();
<% else %>
    $('#list-<%=params[:id] %> ul').
        append("<%=j render partial: 'to_do_items/form_errors', locals: {item: @item} %>");
<% end %>