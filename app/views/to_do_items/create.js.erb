var options = {
    <% if @item.persisted? %>
        html: "<%=j render partial: 'to_do_items/item', locals: {item: @item} %>",
        id: <%= @item.id %>,
    <% else %>
        html: "<%= j render partial: 'to_do_items/form_errors', locals: {item: @item} %>",
    <% end %>
    listId: <%= @item.list_id %>
};

var todoItem = new TodoItem();
todoItem.onCreate(options);


